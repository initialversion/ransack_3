<%= search_form_for @q do |f| %>
  <p class="lead">Narrow results:</p>

    <div class="form-group">
    <%= f.label :email_cont, "Email containing" %>
    <%= f.text_field :email_cont, :class => "form-control", :placeholder => "Email containing" %>
  </div>

  <div class="form-group">
    <%= f.label :photos_caption_cont, "Caption containing" %>
    <%= f.text_field :photos_caption_cont, :class => "form-control", :placeholder => "Caption containing" %>
  </div>

<div class="form-group">
    <%= f.label :comments_comment_description_cont, "Comment description containing" %>
    <%= f.text_field :comments_comment_description_cont, :class => "form-control", :placeholder => "Comment description containing" %>
  </div>

<div class="form-group">
    <%= f.label :votes_vote_descrption_cont, "Vote descrption containing" %>
    <%= f.text_field :votes_vote_descrption_cont, :class => "form-control", :placeholder => "Vote descrption containing" %>
  </div>

<%= f.submit :class => "btn btn-primary btn-block" %>

<a href="/users" class="btn btn-default btn-block">Clear filters</a>
<% end %>

<div class="page-header">
  <h1>
    Users
    <a href="/users/new" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
